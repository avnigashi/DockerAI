# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# OpenAI Configuration (optional - users can provide their own API key)
OPENAI_API_KEY=your-openai-api-key-here

# Open Interpreter Configuration
PYTHON_PATH=python3
INTERPRETER_PATH=interpreter
ENABLE_OPEN_INTERPRETER=true

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/dockerai

# Security Configuration
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/dockerai.log
